<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="Toolbar.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18dp</item>
        <item name="fontFamily">@font/gotham_pro_regular</item>
    </style>
    <style name="FormEditTextStyleModule">
        <item name="android:textSize">16dp</item>
        <item name="fontFamily">@font/gotham_pro_regular</item>
        <item name="android:textColor">@color/color_text_black_subtitle</item>
        <item name="android:textColorHint">@color/color_hint</item>
    </style>
    <style name="EditText.Empty" parent="FormEditTextStyleModule" />

    <style name="EditText.Fill" parent="FormEditTextStyleModule">
        <item name="fontFamily">@font/gotham_pro_medium</item>
    </style>


    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/color_text_login</item>
        <item name="android:background">@drawable/selector_edittext</item>
        <item name="android:padding">7dp</item>
    </style>


</resources>